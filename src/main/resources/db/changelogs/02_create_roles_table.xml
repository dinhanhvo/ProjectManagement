<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="2" author="Vo Dinh">
        <createTable tableName="roles">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="role_name" type="VARCHAR(50)">
                <constraints nullable="false" unique="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="04-add-roles-to-roles-table" author="Vo Dinh">
        <insert tableName="roles">
            <column name="id" value="1" />
            <column name="role_name" value="ROLE_USER" />
        </insert>
        <insert tableName="roles">
            <column name="id" value="2" />
            <column name="role_name" value="ROLE_CUSTOMER" />
        </insert>
        <insert tableName="roles">
            <column name="id" value="3" />
            <column name="role_name" value="ROLE_ADMIN" />
        </insert>
    </changeSet>

</databaseChangeLog>
