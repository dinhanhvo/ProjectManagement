<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="4" author="Vo Dinh">
        <createTable tableName="weights">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="serial_number" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="model" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="quy_cach" type="DOUBLE">
                <constraints nullable="false" />
            </column>
            <column name="created_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="updated_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP" />
            <column name="contact_id" type="INT">
                <constraints nullable="true" />
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="weights" baseColumnNames="contact_id"
                referencedTableName="users" referencedColumnNames="id"
                onDelete="CASCADE" onUpdate="CASCADE"
                constraintName="fk_weights_contact_id" />
    </changeSet>

    <changeSet id="41-add-column-sell-at" author="Vo Dinh">
        <addColumn tableName="weights">
            <column name="sell_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </addColumn>
    </changeSet>

    <changeSet id="add-status-column-to-weights" author="yourname">
        <addColumn tableName="weights">
            <column name="status" type="VARCHAR(50)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="add-name-column-to-weights" author="yourname">
        <addColumn tableName="weights">
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>


</databaseChangeLog>
