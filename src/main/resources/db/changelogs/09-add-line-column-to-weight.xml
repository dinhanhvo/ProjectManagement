<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="09-add-line-column-to-weight" author="Vo Dinh">
        <addColumn tableName="weights">
            <column name="line_id" type="INT">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <addForeignKeyConstraint
                baseTableName="weights"
                baseColumnNames="line_id"
                referencedTableName="line"
                referencedColumnNames="id"
                constraintName="fk_weight_line"/>
    </changeSet>
</databaseChangeLog>
