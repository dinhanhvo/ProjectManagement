<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="5" author="Vo Dinh">
        <createTable tableName="line">
            <column name="id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="line_id" type="VARCHAR(55)">
                <constraints nullable="false" />
            </column>
            <column name="name" type="VARCHAR(55)">
                <constraints nullable="false" />
            </column>
            <column name="status" type="boolean">
            </column>
            <column name="client_id" type="INT">
                <constraints nullable="false" />
            </column>
            <column name="created_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="updated_at" type="DATETIME" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="line"
                baseColumnNames="client_id"
                referencedTableName="users"
                referencedColumnNames="id"
                constraintName="fk_line_users_clientId" />
    </changeSet>

    <changeSet id="add-unique-constraint-line-id" author="your-name">
        <addUniqueConstraint
                columnNames="line_id"
                tableName="line"
                constraintName="unique_line"/>
    </changeSet>
</databaseChangeLog>
